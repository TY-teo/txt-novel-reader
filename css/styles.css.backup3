}

/* ========================================
   底部章节导航样式
   ======================================== */

/* 底部导航容器 - 滚动到底部时显示 */
.bottom-navigation {
    position: relative;
    background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius);
    padding: 1rem 1.5rem;
    margin: 2rem 0 0 0;
    box-shadow: var(--shadow);
    backdrop-filter: blur(10px);
    z-index: 10;
    
    /* 默认隐藏 - 滚动触发显示 */
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.4s ease, transform 0.4s ease;
    visibility: hidden;
}

/* 内联底部导航 - 直接作为内容的一部分显示 */
.bottom-navigation-inline {
    position: relative;
    background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius);
    padding: 1.5rem;
    margin: 3rem 0 2rem 0; /* 增加上边距，与正文内容分开 */
    box-shadow: var(--shadow);
    backdrop-filter: blur(10px);
    z-index: 10;
    
    /* 直接显示，无需动画 */
    opacity: 1;
    transform: translateY(0);
    visibility: visible;
}

/* 显示状态 */
.bottom-navigation.visible {
    opacity: 1;
    transform: translateY(0);
    visibility: visible;
}

/* 增强的动画效果 */
.bottom-navigation.visible .nav-btn {
    animation: slideInUp 0.3s ease 0.1s both;
}

.bottom-navigation.visible .chapter-info {
    animation: fadeInUp 0.4s ease 0.05s both;
}

/* 动画关键帧 */
@keyframes slideInUp {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(5px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

