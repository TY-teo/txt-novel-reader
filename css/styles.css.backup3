    box-shadow: none;
}

/* 按钮图标样式 */
.nav-btn .btn-icon {
    font-size: 1rem;
    transition: transform 0.2s ease;
}

.nav-btn:hover:not(:disabled) .btn-icon {
    transform: scale(1.1);
}

/* 波纹效果 */
.nav-btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.3s ease, height 0.3s ease;
}

.nav-btn:active:not(:disabled)::before {
    width: 120px;
    height: 120px;
}

/* 响应式设计 */
@media (max-width: 768px) {
    .bottom-navigation {
        padding: 0.75rem 1rem;
        margin: 1.5rem 0 0 0;
        border-radius: calc(var(--border-radius) - 2px);
    }
    
    .navigation-content {
        gap: 0.75rem;
    }
    
    .chapter-info h3 {
        font-size: 1rem;
    }
    
    .chapter-progress {
        font-size: 0.8rem;
    }
    
    .nav-btn {
        padding: 0.6rem 1rem;
        font-size: 0.85rem;
        min-width: 90px;
        height: 40px;
    }
    
    .nav-btn .btn-text {
        display: none;
    }
    
    .nav-btn .btn-icon {
        font-size: 1.1rem;
    }
}

@media (max-width: 480px) {
    .bottom-navigation {
        padding: 0.6rem 0.75rem;
        margin: 1rem 0 0 0;
    }
    
    .navigation-content {
        gap: 0.5rem;
    }
    
    .chapter-info h3 {
        font-size: 0.9rem;
    }
    
    .nav-btn {
        padding: 0.5rem 0.75rem;
        min-width: 80px;
        height: 36px;
    }
}

/* 夜间模式下的特殊效果 */
[data-theme="dark"] .nav-btn {
    background: var(--accent-color);
}

[data-theme="dark"] .nav-btn:hover:not(:disabled) {
    background: var(--accent-hover);
    box-shadow: 0 4px 12px rgba(74, 158, 255, 0.3);
}

[data-theme="dark"] .nav-btn:disabled {
    background: var(--bg-tertiary);
    color: var(--text-muted);
}

/* 底部导航进度指示器 */
.bottom-navigation .chapter-progress {
    position: relative;
    --progress-width: 0%;
    font-size: 0.9rem;
    color: var(--text-secondary);
    font-weight: 500;
}

.bottom-navigation .chapter-progress::after {
    content: '';
    display: block;
    width: 100%;
    height: 2px;
    background: var(--bg-tertiary);
    border-radius: 1px;
    margin-top: 0.5rem;
    position: relative;
    overflow: hidden;
}

.bottom-navigation .chapter-progress::before {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: var(--progress-width);
    height: 2px;
    background: var(--accent-color);
    border-radius: 1px;
    transition: width 0.3s ease;
    z-index: 1;
}

/* 平滑的hover效果 */
.bottom-navigation:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
}

[data-theme="dark"] .bottom-navigation:hover {
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
}
